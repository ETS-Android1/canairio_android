<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Sensor settings">

        <EditTextPreference
            android:inputType="text"
            android:icon="@android:drawable/ic_menu_save"
            app:key="@string/key_setting_dname"
            app:summary=""
            app:title="Station Name" />

        <EditTextPreference
            android:defaultValue="5"
            android:inputType="number"
            app:key="@string/key_setting_stime"
            app:summary="@string/summary_stime"
            app:title="Sample Time Interval" />

        <EditTextPreference
            android:defaultValue="/sdcard/canairio"
            android:editable="false"
            android:enabled="false"
            android:inputType="textUri"
            app:key="@string/key_setting_sdpath"
            app:summary="/sdcard/canairio"
            app:title="Export Directory" />

    </PreferenceCategory>


    <PreferenceCategory
        android:title="Dedicated WiFi Connection">

        <EditTextPreference
            android:icon="@android:drawable/ic_lock_lock"
            android:inputType="text"
            app:key="@string/key_setting_ssid"
            app:summary=""
            app:title="WiFi Name" />

        <EditTextPreference
            android:inputType="textWebPassword"
            android:password="true"
            app:key="@string/key_setting_pass"
            app:summary="WiFi password"
            app:title="Password" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/key_setting_enable_wifi"
            android:summary="@string/summary_wifi"
            android:title="Enable WiFi Connection" />

    </PreferenceCategory>

    <PreferenceCategory
        android:dependency="@string/key_setting_enable_wifi"
        android:title="CanAirIO Cloud Config">

        <EditTextPreference
            android:icon="@android:drawable/ic_menu_upload"
            android:inputType="text"
            app:key="@string/key_setting_apiusr"
            app:summary=""
            app:title="Username" />

        <EditTextPreference
            android:inputType="textWebPassword"
            app:key="@string/key_setting_apipss"
            android:password="true"
            app:summary="CanAirIO API Password"
            app:title="Password" />

        <SwitchPreferenceCompat
            app:key="@string/key_setting_enable_api"
            app:title="Enable CanAirIO API" />

    </PreferenceCategory>


    <PreferenceCategory
        android:dependency="@string/key_setting_enable_wifi"
        android:title="Optional InfluxDB Config">

        <EditTextPreference
            android:icon="@android:drawable/ic_menu_upload"
            android:inputType="text"
            app:key="@string/key_setting_ifxdb"
            app:summary=""
            app:title="Database Name" />

        <EditTextPreference
            android:inputType="textUri"
            app:key="@string/key_setting_ifxip"
            app:summary=""
            app:title="Hostname" />

        <EditTextPreference
            android:inputType="text"
            app:key="@string/key_setting_ifxtg"
            app:summary=""
            app:title="Optional Data Tags" />

        <SwitchPreferenceCompat
            app:key="@string/key_setting_enable_ifx"
            app:title="Enable InfluxDB Cloud" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Optional Static Station Location">

        <SwitchPreferenceCompat
            android:icon="@drawable/ic_stop_white_18dp"
            app:key="@string/key_setting_location"
            app:title="Save Current Location" />

    </PreferenceCategory>

    <PreferenceCategory>

        <Preference
            android:icon="@android:drawable/ic_menu_send"
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send Feedback" />

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>