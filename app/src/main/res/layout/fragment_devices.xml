<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_device_scanning"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selectable_picker_background"
        android:gravity="center"
        android:text="@string/bt_device_scan"
        android:textSize="18sp"
        android:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bt_device_build"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_device_build"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:layout_above="@id/rl_separator"
        android:layout_margin="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="15dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/bt_device_build"
        android:textColor="@color/white"
        android:textSize="18sp"
        />


    <RelativeLayout
        android:id="@+id/rl_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_picker_card_height"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

    </RelativeLayout>


</RelativeLayout>
