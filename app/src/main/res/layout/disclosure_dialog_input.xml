<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_disclosure_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/about" />

    <ImageView
        android:id="@+id/img_disclosure"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_disclosure_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_picker_chart" />

    <Button
        android:id="@+id/bt_alias_cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_disclosure"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/bt_dialog_cancel"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_alias_continue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_disclosure"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/bt_dialog_agree"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>